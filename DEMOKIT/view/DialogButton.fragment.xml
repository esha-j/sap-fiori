<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="dialogButton"
        title="Hello {/recipient/name}"
    >
        <content>
            <core:Icon
                src="sap-icon://sap-ui5"
                size="1cm"
                class="sapUiMediumMargin"
            />
        </content>

        <beginButton>
            <Button
                text="{i18n>dialogCloseButtonText}"
                press=".onCloseDialog"
            />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
